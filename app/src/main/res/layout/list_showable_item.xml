<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:background="@color/gray_3"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/list_sho_comment"
        />

    <ImageView
        android:id="@+id/list_sho_image"
        android:layout_width="0dp"
        android:layout_height="100dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_sho_header"

        />


    <TextView
        android:id="@+id/list_sho_header"
        android:layout_width="0dp"
        android:layout_height="50dp"

        android:text="@string/default_header"
        android:textAllCaps="true"

        android:paddingLeft="8dp"
        android:paddingTop="8dp"

        android:maxLines="2"
        android:autoSizeTextType="uniform"
        app:autoSizeTextType="uniform"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeMaxTextSize="180sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/list_sho_comment"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_sho_image"
        />





</android.support.constraint.ConstraintLayout>