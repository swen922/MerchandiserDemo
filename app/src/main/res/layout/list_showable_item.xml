<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:background="@color/gray_3"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/list_sho_image"
        />

    <ImageView
        android:id="@+id/list_sho_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:scaleType="centerInside"
        android:layout_marginTop="8dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_sho_comment"

        />


    <TextView
        android:id="@+id/list_sho_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"


        android:text="@string/default_header"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/gray_0"
        android:textSize="16sp"

        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"

        android:gravity="left|top"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/list_sho_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:textColor="@color/gray_0"

        android:paddingLeft="8dp"
        android:paddingRight="8dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_sho_header"
        />


</android.support.constraint.ConstraintLayout>