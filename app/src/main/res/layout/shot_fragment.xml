<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:id="@+id/shot_frag_guide_vertic_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintGuide_percent="0.5"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="false"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <ImageView
        android:id="@+id/shot_frag_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <ImageView
        android:id="@+id/shot_frag_button_scale"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:background="@drawable/back_rounded_transp_stroke"
        android:src="@drawable/ic_zoom_out_map_1"

        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"

        app:layout_constraintRight_toLeftOf="@id/shot_frag_button_close"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/shot_frag_button_close"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:background="@drawable/back_rounded_transp_stroke"
        android:src="@drawable/ic_clear_1"

        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/shot_frag_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:background="@color/gray_1_10pc"

        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/shot_frag_button_scale"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/shot_frag_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:background="@color/gray_1_10pc"

        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</android.support.constraint.ConstraintLayout>